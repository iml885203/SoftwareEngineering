<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <a href="/admin/project/create">
      <button type="button" class="btn btn-default">
        創建專案
      </button>
    </a>
    <table class="table">
      <thead>
        <th>專案名稱</th>
        <th>PM</th>
        <th>創建日期</th>
      </thead>
      <tbody>
        <% if(projects.length){ %>
          <% projects.forEach(function(project){ %>
            <tr>
              <td><%=project.name%></td>
              <td><%=project.manager.name%></td>
              <td><%=project.createdAt.toLocaleString()%></td>
              <td>
                <a href="/admin/project/edit/<%=project.id%>" class="glyphicon glyphicon-search"></a>
                <a href="/admin/project/edit/<%=project.id%>" class="glyphicon glyphicon-edit"></a>
                <form action="/admin/project/delete/<%=project.id%>" class="inline-block">
                  <button type="submit" class="btn-link">
                    <i class="glyphicon glyphicon-remove"></i>
                  </button>
                </form>
              </td>
            </tr>
          <% }) %>
        <% } %>
      </tbody>
    </table>
  </div>
</div>
